{
    // gart's default tsconfig.json
    "compilerOptions": {
      "tsBuildInfoFile": "./dist/.tsbuildinfo",
      "incremental": true,
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "./src",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "removeComments": true,
      "esModuleInterop": true,
      "preserveSymlinks": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "alwaysStrict": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "./dist/**/*"],
    "lib": [],
  }
  